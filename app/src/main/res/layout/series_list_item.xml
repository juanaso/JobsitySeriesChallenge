<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/series_list_item_root"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="@dimen/series_list_container_height"
    android:background="@drawable/custom_background_movie_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/series_image"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            tools:src="@mipmap/movie_poster_test" />

        <TextView
            android:id="@+id/series_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="Test" />
    </LinearLayout>
</RelativeLayout>